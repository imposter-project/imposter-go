{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/legacyFormat",
    "definitions": {
        "legacyFormat": {
            "type": "object",
            "required": ["plugin"],
            "oneOf": [
                {
                    "required": ["resources"],
                    "not": {
                        "required": ["response", "path", "method", "contentType", "specFile", "wsdlFile"]
                    }
                },
                {
                    "anyOf": [
                        { "required": ["response"] },
                        { "required": ["path"] },
                        { "required": ["method"] },
                        { "required": ["contentType"] },
                        { "required": ["specFile"] },
                        { "required": ["wsdlFile"] }
                    ],
                    "not": {
                        "required": ["resources"]
                    }
                }
            ],
            "properties": {
                "plugin": {
                    "type": "string",
                    "enum": ["rest", "soap", "hbase", "openapi"]
                },
                "basePath": {
                    "type": "string"
                },
                "specFile": {
                    "description": "OpenAPI specification file (YAML or JSON)",
                    "type": "string"
                },
                "wsdlFile": {
                    "type": "string"
                },
                "resources": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "allOf": [
                            { "$ref": "shared-definitions.json#/definitions/requestMatcher" },
                            {
                                "type": "object",
                                "required": ["response"],
                                "properties": {
                                    "response": { "$ref": "shared-definitions.json#/definitions/response" },
                                    "contentType": { 
                                        "type": "string",
                                        "description": "[DEPRECATED] Please use response.headers['Content-Type'] instead. This property will be removed in a future version."
                                    }
                                }
                            }
                        ]
                    }
                },
                "interceptors": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "allOf": [
                            { "$ref": "shared-definitions.json#/definitions/requestMatcher" },
                            {
                                "type": "object",
                                "properties": {
                                    "response": { "$ref": "shared-definitions.json#/definitions/response" },
                                    "continue": { "type": "boolean" }
                                }
                            }
                        ]
                    }
                },
                "system": {
                    "type": "object",
                    "properties": {
                        "stores": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "object",
                                "properties": {
                                    "preloadFile": { "type": "string" },
                                    "preloadData": {
                                        "type": "object",
                                        "additionalProperties": true
                                    }
                                }
                            }
                        },
                        "xmlNamespaces": {
                            "type": "object",
                            "additionalProperties": { "type": "string" }
                        }
                    }
                },
                "response": { "$ref": "shared-definitions.json#/definitions/response" },
                "path": { "type": "string" },
                "method": { "type": "string" },
                "contentType": { 
                    "type": "string",
                    "description": "[DEPRECATED] Please use response.headers['Content-Type'] instead. This property will be removed in a future version."
                },
                "validation": { "$ref": "shared-definitions.json#/definitions/validation" },
                "config": {
                    "type": "object",
                    "description": "Plugin-specific configuration block for external plugins",
                    "additionalProperties": true
                }
            }
        }
    }
} 